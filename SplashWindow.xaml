<Window x:Class="AGMessenger.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FB-Messenger"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="500" Height="350"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Border CornerRadius="20" Background="#1a1a2e">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="#0066ff"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo/Icon -->
            <Viewbox Grid.Row="0" Width="120" Height="120" Margin="0,40,0,20">
                <Canvas Width="100" Height="100">
                    <!-- Messenger-style gradient circle -->
                    <Ellipse Width="100" Height="100">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#0099ff" Offset="0"/>
                                <GradientStop Color="#a033ff" Offset="0.5"/>
                                <GradientStop Color="#ff5580" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <!-- Lightning bolt -->
                    <Path Fill="White" Data="M55,20 L40,48 L50,48 L45,80 L65,45 L53,45 Z"/>
                </Canvas>
            </Viewbox>

            <!-- Title -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <TextBlock Text="FB-Messenger" FontSize="32" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Powered by JaRoD-CENTER" FontSize="12" Foreground="#888"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Loading animation -->
            <StackPanel Grid.Row="2" Margin="0,30,0,0">
                <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Width="200" Height="4"
                             Background="#333" Foreground="#0099ff" BorderThickness="0"/>
                <TextBlock x:Name="StatusText" Text="Ładowanie Messengera..." FontSize="12" 
                           Foreground="#aaa" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Skip button -->
            <Button x:Name="SkipButton" Grid.Row="3" Content="Pomiń" 
                    Width="100" Height="30" Margin="0,20,0,30"
                    Background="Transparent" Foreground="#666" BorderBrush="#444"
                    Cursor="Hand" Click="SkipButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#0099ff"/>
                                <Setter Property="BorderBrush" Value="#0099ff"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
